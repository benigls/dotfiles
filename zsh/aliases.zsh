# Reload zsh config
alias reload!="source ~/.zshrc"

# File system
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

alias l="ls -la"
alias ll="ls -l"
alias rmf="rm -rf"

# tmux
alias tmux='tmux -2'
alias ta='tmux attach'
alias tls='tmux ls'
alias tat='tmux attach -t'
alias tns='tmux new-session -s'
